<link rel="stylesheet" href="/css/login.css" />


<div class="sign-in-container">
    <div class="sign-in-form-container">
        <img src="/images/logo.png" alt='Logo' width="200" />

        <form class="sign-in-form" action="/users/create-session" method="post">
            <label>Email Address</label>
            <input type="email" class="sign-in-form-input" name="email"/>

            <label>Password</label>
            <input type="password" class="sign-in-form-input" name="password" />

            <button type="submit" class="sign-in-form-button">Sign In</button>
        </form>

        <div class="sign-up-container">
            New to PlacementCell? <a href='/users/signup'>Create an account</a>
        </div>
    </div >
</div >
