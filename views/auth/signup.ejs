<div class="sign-in-container">
    <div class="sign-in-form-container">
        <img src="/images/logo.png" alt='Logo' width="200" />

        <form class="sign-in-form" action="/users/signup" method="post">
            <label> Name</label>
            <input type="text" class="sign-in-form-input" name="name"/>

            <label> Email Address</label>
            <input type="email" class="sign-in-form-input" name="email"/>

            <label>Password</label>
            <input type="password" class="sign-in-form-input" name="password" />

            <label>Confirm Password</label>
            <input type="password" class="sign-in-form-input" name="confirmPassword" />

            <button type="submit" class="sign-in-form-button">Sign In</button>
        </form>

        <div class="sign-up-container">
            Already Having account? <a href='/users/signin'>Sign In</a>
        </div>
    </div >
</div >

<link rel="stylesheet" href="/css/login.css" />
