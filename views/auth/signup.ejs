<div class="container m-5">
  <form class="m-5 center-block" id="login-form" method="post">
    <h3 class="mb-4">Sign Up</h3>
    <div class="mb-3">
      <label for="employeeName" class="form-label">Name</label>
      <input type="name" class="form-control" name="name" id="employeeName" />
    </div>
    <div class="mb-3">
      <label for="employeeEmail" class="form-label">Email address</label>
      <input
        type="email"
        class="form-control"
        name="email"
        id="employeeEmail"
      />
    </div>
    <div class="mb-3">
      <label for="employeePassoword" class="form-label">Password</label>
      <input
        type="password"
        class="form-control"
        name="password"
        id="employeePassoword"
      />
    </div>
    <div class="mb-5">
      <label for="employeePassoword" class="form-label">Confirm Password</label>
      <input
        type="password"
        class="form-control"
        name="confirmPassword"
        id="employeePassoword"
      />
    </div>
    <div class="d-grid">
      <button type="submit" class="btn btn-primary btn-block">Submit</button>
    </div>
  </form>
</div>
